<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFEBCD">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aperte a minha barriguinha uma vez para cada transição que lhe contarei algo importante..."
        android:id="@+id/tela"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="0dp"
        android:layout_y="23dp"
        android:textAlignment="center" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bird"
        android:id="@+id/bird"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="19dp"
        android:layout_y="327dp" />

    <ImageView
        android:layout_width="402dp"
        android:layout_height="327dp"
        android:src="@drawable/balao"
        android:id="@+id/fala"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tela"
        android:layout_x="-22dp"
        android:layout_y="15dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="327dp"
        android:id="@+id/casal"
        android:layout_x="0dp"
        android:layout_y="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:id="@+id/Fim"
        android:layout_x="115dp"
        android:layout_y="368dp"
        android:textSize="15dp" />


</AbsoluteLayout>
